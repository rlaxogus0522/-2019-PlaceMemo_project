<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.placememo_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider" />
        </provider>

        <activity android:name=".activity.EditNomalMemoActivity"
            android:theme="@style/Theme.MyDialog"  />
        <activity android:name=".activity.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/kakao_scheme"
                    android:host="@string/kakaolink_host" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AlamActivity"
            android:showOnLockScreen="true" />
        <activity android:name=".activity.TitleAddItemActivity"
            android:theme="@style/Theme.MyDialog"/>
        <activity android:name=".activity.NomalMemoInsetActivity"
            android:theme="@style/Theme.MyDialog"/>
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.EditMemoActivity"
            android:theme="@style/Theme.MyDialog" />
        <activity
            android:name=".activity.InsertActivity"
            android:theme="@style/Theme.MyDialog" />
        <activity android:name=".activity.LocationActivity" />
        <activity
            android:name=".activity.IconActivity"
            android:theme="@style/Theme.MyDialog" />
        <activity android:name=".activity.LoginActivity"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAeyokLLIn5BwKqqVRm0weMIU9GOBmfJUc" />
        <receiver
            android:name=".receiverNoti.LocationReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="AlarmService"/>
            </intent-filter>
        </receiver>
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

</manifest>